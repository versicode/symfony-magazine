{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ title }}</h1>
    {% for message in app.session.flashbag.get('notice') %}
        <span>={{ message }}=</span>
    {% endfor %}
    {% if posts %}
        {% for post in posts %}
            <ul>
                <li>
                    <a href="{{ path('post_view', {'slug': post.slug}) }}">
                        {{ post.title }}
                        {% if post.author %}
                            by <strong>{{ post.author.name }}</strong>
                        {% endif %}
                    </a>
                </li>
            </ul>
        {% endfor %}
    {% else %}
        Sorry, no posts found
    {% endif %}
{% endblock %}
